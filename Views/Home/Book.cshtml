@model Prog6.ViewModels.BookingViewModel
@{
    ViewBag.Title = "Book";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Kamer </h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Room.Id)
    @Html.HiddenFor(model => model.Room.Type)
    @Html.HiddenFor(model => model.Room.Size)
    <div class="form-group">
        @Html.LabelFor(model => model.Tamagotchis, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.ListBox("Tamagotchis", null, new { size = 8 })
            @Html.ValidationMessageFor(model => model.Tamagotchis, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>

}
<div>
    @Html.ActionLink("Terug naar vrije kamers", "Booking")
</div>
